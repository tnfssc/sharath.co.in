---
import StartButton from "../components/StartButton.astro";

export interface Props {
  title: string;
  frontmatter?: any;
}

const { title, frontmatter } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title || frontmatter.title} | sharath.co.in</title>
  </head>
  <body class="bg-gradient-to-br from-gray-900 to-stone-800 h-screen w-screen overflow-auto flex flex-col text-white">
    <div
      class="absolute z-50 w-screen h-screen overflow-auto flex justify-center content-center flex-col"
      style="display: none"
      id="rootmodal">
    </div>
    <header>
      <StartButton />
    </header>
    <main class="flex-1 flex flex-col justify-center items-center mt-4">
      <slot />
    </main>
    <footer class="flex justify-center align-middle py-1">
      <a href="https://sharath.co.in" class="hover:underline">
        Sharath ♥️ {new Date().getFullYear()}
      </a>
    </footer>

    <style>
      @font-face {
        font-family: "Red Hat Display";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url(/redhatdisplay400.woff2) format("woff2");
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074,
          U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
      }
      html {
        font-family: "Red Hat Display", system-ui, sans-serif;
        font-size: var(--font-size-base);
        color: var(--color-text);
        background-color: var(--color-bg);
      }

      body {
        margin: 0;
      }

      :global(h1) {
        font-size: var(--font-size-xl);
      }

      :global(h2) {
        font-size: var(--font-size-lg);
      }

      :global(code) {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono,
          Courier New, monospace;
      }
    </style>
    <script is:inline src="/assets/js/vanilla-tilt.js"></script>
  </body>
</html>
