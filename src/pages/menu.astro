---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import CardGrid from "../components/CardGrid.astro";

const menuItems = [
  {
    content: "Home",
    href: "/",
    background: "bg-gradient-to-tl from-red-500 to-yellow-500",
    width: 4,
    height: 2,
    disableDescription: true,
  },
  {
    content: "Self-hosted",
    href: "/self-hosted",
    background: "bg-gradient-to-tl from-lime-500 to-indigo-500",
    width: 4,
    height: 2,
    description: "My self-hosted projects",
  },
  {
    content: "About",
    href: "/about",
    background: "bg-gradient-to-tl from-purple-500 to-pink-500",
    width: 2,
    height: 2,
    disableDescription: true,
  },
  {
    content: "Contact",
    href: "/contact",
    background: "bg-gradient-to-tl from-teal-500 to-blue-500",
    width: 2,
    height: 2,
    disableDescription: true,
  },
];
---

<Layout title="Menu">
  <div>
    <CardGrid>
      {
        menuItems.map(item => (
          <Card
            href={item.href}
            bgColorClass={item.background}
            width={item.width}
            height={item.height}
            disableDescription={item.disableDescription}>
            {item.content}
            <span slot="description" class="text-center">
              {item.description}
            </span>
          </Card>
        ))
      }
    </CardGrid>
  </div>
</Layout>
