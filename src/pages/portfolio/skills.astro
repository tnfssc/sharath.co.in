    content: "React",
    href: "https://reactjs.org/",
    background: "bg-gradient-to-tl from-cyan-900 to-cyan-400",
    width: 4,
    height: 4,
    description: "ReactJS",
    icon: siReact,
    iconSizeClass: "w-6 h-6",
    disableDescription: true,
  },
  {
    content: "Node.JS",
    href: "https://nodejs.org/en/",
    background: "bg-gradient-to-tl from-green-900 to-green-400",
    width: 4,
    height: 4,
    description: "Node.JS",
    icon: siNodedotjs,
    iconSizeClass: "w-6 h-6",
    disableDescription: true,
  },
  {
    content: "Python",
    href: "https://www.python.org/",
    background: "bg-gradient-to-tl from-yellow-900 to-yellow-400",
    width: 2,
    height: 2,
    description: "Python",
    icon: siPython,
    iconSizeClass: "w-6 h-6",
    disableDescription: true,
  },
  {
    content: "PHP",
    href: "https://www.php.net/",
    background: "bg-gradient-to-tl from-violet-900 to-violet-400",
    width: 2,
    height: 2,
    description: "PHP",
    icon: siPhp,
    iconSizeClass: "w-6 h-6",
    disableDescription: true,
  },
  {
    content: "C++",
    href: "https://www.cplusplus.com/",
