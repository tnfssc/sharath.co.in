  siNodedotjs,
  siReact,
  siPhp,
  siCplusplus,
  siMysql,
  siMongodb,
  siGnu,
  siPython,
  siAmazonaws,
  siMicrosoftazure,
  siGooglecloud,
  siOracle,
  siDocker,
  siTypescript,
  siKubernetes,
} from "simple-icons/icons";

