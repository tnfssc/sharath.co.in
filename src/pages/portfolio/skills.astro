  {
    content: "MongoDB",
    href: "https://www.mongodb.com/",
    background: "bg-gradient-to-tl from-lime-900 to-lime-400",
    width: 4,
    height: 2,
    description: "MongoDB",
    icon: siMongodb,
    iconSizeClass: "w-6 h-6",
    disableDescription: true,
  },
  {
    content: "TypeScript",
    href: "https://www.typescriptlang.org/",
    background: "bg-gradient-to-tl from-blue-900 to-blue-400",
    width: 4,
    height: 4,
    description: "TypeScript",
    icon: siTypescript,
    iconSizeClass: "w-6 h-6",
    disableDescription: true,
  },
  {
    content: "Linux",
    href: "https://www.linux.org/",
    background: "bg-gradient-to-tl from-yellow-900 to-yellow-400",
    width: 4,
