---

<Layout title="Self-Hosted">
  <div>
    <CardGrid>
      {
        menuItems.map(item => (
          <Card
            href={item.href}
            bgColorClass={item.background}
            width={item.width}
            height={item.height}
            icon={item.icon}
            iconSizeClass={item.iconSizeClass}
            disableDescription={item.disableDescription}>
            {item.content}
            <span slot="description" class="text-center">
              {item.description}
            </span>
          </Card>
        ))
      }
    </CardGrid>
  </div>
</Layout>
